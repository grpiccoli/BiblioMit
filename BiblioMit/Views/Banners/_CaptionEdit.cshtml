@model BiblioMit.Models.Entities.Ads.CaptionVM
@using System.Drawing

<div id="caption-edit" class="d-none">
    <form id="caption-form" asp-action="EditCaption">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group d-none">
            <label asp-for="Id" class="control-label"></label>
            <input asp-for="Id" class="form-control" />
            <span asp-validation-for="Id" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Title" class="control-label"></label>
            <input asp-for="Title" class="form-control" />
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Subtitle" class="control-label"></label>
            <input asp-for="Subtitle" class="form-control" />
            <span asp-validation-for="Subtitle" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Position" class="control-label"></label>
            <select asp-for="Position" asp-items="Html.GetEnumSelectList<BiblioMit.Models.Entities.Ads.VerticalPosition>()" class="form-control">
            </select>
            <span asp-validation-for="Position" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Lang" class="control-label"></label>
            <select asp-for="Lang" asp-items="Html.GetEnumSelectList<BiblioMit.Models.Entities.Ads.Lang>()" class="form-control">
            </select>
            <span asp-validation-for="Lang" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Color" class="control-label"></label>
            <input asp-for="Color" type="color" class="form-control" value="#ffffff" />
            <span asp-validation-for="Color" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input type="submit" value="Guardar" class="btn btn-primary" />
        </div>
    </form>
</div>