@model BiblioMit.Models.Individual

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit</h2>

<form asp-action="Edit">
    <div class="form-horizontal">
        <h4>Individual</h4>
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="Id" />
        <div class="form-group">
            <label asp-for="SamplingId" class="control-label col-md-2"></label>
            <div class="col-md-10">
                <select asp-for="SamplingId" class="form-control" asp-items="ViewBag.SamplingId"></select>
                <span asp-validation-for="SamplingId" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Sex" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Sex" class="form-control" />
                <span asp-validation-for="Sex" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Maturity" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Maturity" class="form-control" />
                <span asp-validation-for="Maturity" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="@Localizer["Save"]" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>

<div>
    <a asp-action="Index">Back to List of Subjects</a>
    <text>|</text>
    <a asp-controller="Samplings" asp-action="Details" asp-route-id="@Model.SamplingId">Back to Sampling Details</a>
</div>

    <partial name="_ValidationScriptsPartial" />

