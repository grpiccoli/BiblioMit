@model BiblioMit.Models.HomeIndexModel

<partial name="_Libs" model='new List<string> { "background" }' />

<div class="container body-content">
    <div class="row frontPageSplash">
        <div class="col-md-6 frontPageLearn">
            <div class="frontPageHeading">Foro BiblioMit Aprende, Colabora, Comparte conocimiento</div>
            <p class="frontPageSubHeading">Primer foro de mitilicultura de Chile</p>
            <div>
                <form asp-controller="Home" asp-action="Search" method="post">
                    <input asp-for="SearchQuery" type="text" class="homeSearch" placeholder="Buscar&hellip;" />
                </form>
            </div>
        </div>
        <div class="col-md-6"></div>
    </div>
    <div class="row frontPageContent">
        <h3 id="latestsPosts">Últimas publicaciones</h3>
        <table class="table table-hover" id="latestsPostsTable">
            <tbody>
                @foreach (var post in Model.LatestPosts)
                {
                    <tr>
                        <td>
                            <div class="forumLogo" data-url="@post.Forum.ImageUrl"></div>
                            <div class="postTitle">
                                <a asp-controller="Posts" asp-action="Index" asp-route-id="@post.Id">
                                    @post.Title
                                </a>
                            </div>
                            <div class="postSubTitle">
                                <span>@post.RepliesCount Respuesta@(post.RepliesCount != 1 ? "s" : "")</span>
                                <span class="postUser">
                                    <a asp-controller="Profile" asp-action="Detail" asp-route-id="@post.AuthorId">
                                        @post.AuthorName
                                    </a>
                                </span>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>