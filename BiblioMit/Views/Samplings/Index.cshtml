@model IEnumerable<BiblioMit.Models.Sampling>

@{
    ViewData["Title"] = Localizer["Index"];
}

<h2>@ViewData["Title"]</h2>

<p>
    <a asp-action="Create">@Localizer["Add new sample"]</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Salinity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Temp)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.O2)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Centre.Company)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Centre)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Salinity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Temp)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.O2)
            </td>
            <td>
                <span title="@item.Centre.Company.BusinessName">
                    @item.Centre.Company.BusinessName.Substring(0,(item.Centre.Company.BusinessName.Length > 20) ? 20 : item.Centre.Company.BusinessName.Length) &hellip;
                </span>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Centre.Id)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">@Localizer["Edit"]</a> |
                <a asp-action="Details" asp-route-id="@item.Id">@Localizer["Details"]</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">@Localizer["Delete"]</a>
            </td>
        </tr>
}
    </tbody>
</table>
